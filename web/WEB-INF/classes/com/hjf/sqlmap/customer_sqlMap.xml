<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "Customer">
	<!-- 查询id查询 -->
	<select id="findById" parameterType="java.lang.Integer" resultType="Customer" >
	    select * from customer  where    customerId={#customerId}
	</select>	 
	<!-- 用户密码登录   -->
	<select id="login" parameterType="Customer" resultType="Customer">
		select * from customer where  telephone=#{telephone}  and password=#{password}
	</select>	
	<!-- 用户密码登录   -->
	<select id="findByTelephone" parameterType="java.lang.String" resultType="Customer">
		select * from customer where  telephone=#{telephone}  
	</select>	
	
	
	<!-- 增加 -->
	<insert id="insertWithId" parameterType="Customer">
		 insert into customer (customerId,customerName,password,telephone,createdTime,registTime,status,
		 			cityCode,imei,imsi)
		 values(#{customerId},#{customerName},#{password},#{telephone},#{createdTime},#{registTime},#{status},
		 			#{cityCode},#{imei},#{imsi})
	    <selectKey resultType="int" keyProperty="customerId" >
            SELECT @@IDENTITY AS customerId
        </selectKey> 
	</insert>
  	 
	<!-- 更新账户 -->
	<update id="updateById" parameterType="Customer" >
	   update customer 
  	   	   <trim prefix="set"  suffixOverrides="," >
	  	   	 <if test="@MyOgnl@isNotEmpty(userName)">
	   		 	customerName=#{customerName},
	   		 </if>
	   		  <if test="@MyOgnl@isNotEmpty(age)">
	   		 	age=#{age},
	   		 </if>
	   		 <if test="@MyOgnl@isNotEmpty(sex)">
	   		 	sex=#{sex},
	   		 </if> 
	   		 <if test="@MyOgnl@isNotEmpty(gexinCid)">
	   		 	gexinCid=#{gexinCid},
	   		 </if> 
	   		  <if test="@MyOgnl@isNotEmpty(rongToken)">
	   		 	rongToken=#{rongToken},
	   		 </if> 
	   		  <if test="@MyOgnl@isNotEmpty(telephone)">
	   		 	telephone=#{telephone},
	   		 </if>
	   		 <if test="@MyOgnl@isNotEmpty(headPic)">
	   		 	headPic=#{headPic},
	   		 </if>
	   		  <if test="@MyOgnl@isNotEmpty(label)">
	   		 	label=#{label},
	   		 </if>
	   		 <if test="@MyOgnl@isNotEmpty(email)">
	   		 	email=#{email},
	   		 </if>
	   		 <if test="@MyOgnl@isNotEmpty(password)">
	   		 	password=#{password},
	   		 </if>
	   		  <if test="@MyOgnl@isNotEmpty(dynamicState)">
	   		 	dynamicState=#{dynamicState}
	   		 </if>
	   </trim>
	   where customerId = #customerId#
	</update> 
  
</mapper>